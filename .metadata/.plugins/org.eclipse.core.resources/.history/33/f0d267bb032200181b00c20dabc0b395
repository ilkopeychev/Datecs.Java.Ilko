
public class Bitwize {
	public static int checkBitFor1(int digit) {
		for (int i = 0; i < 16; i++) {
			if ((digit & (1 << i)) == 1) {
				return 1;
			} 
		}
		return 0;
	}

	

	public static void main(String[] args) {

//		System.out.println(checkBitFor1(1));
		System.out.println(checkBitFor1(7&(1<<0)));
		System.out.println(checkBitFor1(7&(1<<1)));
		System.out.println(checkBitFor1(7&(1<<2)));
		System.out.println(checkBitFor1(7&(1<<3)));
		System.out.println(checkBitFor1(7&(1<<4)));
	}
}
